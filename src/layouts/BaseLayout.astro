---
import "@fontsource-variable/nunito-sans";
import "@fontsource-variable/noto-sans-mono";
import "@styles/global.css";
import { panda } from "styled-system/jsx";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Richard Boomsma | Obscure Software</title>
  </head>

  <panda.body fontFamily="nunito">
    <slot />
  </panda.body>

  <style>
    html {
      font-size: clamp(16px, 1.2vw, 19px);
    }
  </style>

  <script>
    // https://developer.chrome.com/blog/history-api-scroll-restoration/
    // Because of the bug in the header where the menu button is not visible if scroll restoration is enabled, lets disable it.

    if ("scrollRestoration" in history) {
      // Back off, browser, I got this...
      history.scrollRestoration = "manual";
    }
  </script>
</html>
